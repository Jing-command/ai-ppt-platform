# Application
DEBUG=true
ENVIRONMENT=development
APP_NAME="AI PPT Platform"
APP_VERSION=0.1.0

# Database
DB_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_ppt
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# AI/LLM
AI_PROVIDER=deepseek
AI_API_KEY=your-api-key-here
AI_MODEL=deepseek-chat
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096
AI_TIMEOUT=60

# Security
SECURITY_SECRET_KEY=your-secret-key-change-in-production
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# Export
EXPORT_MAX_FILE_SIZE_MB=50
EXPORT_TEMP_DIR=/tmp/ai-ppt-exports
EXPORT_CLEANUP_INTERVAL_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API
API_V1_PREFIX=/api/v1
